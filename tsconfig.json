{
  "include": ["./packages/*/**.ts", "./src/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.stub.ts", "node_modules", "dist"],
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist"
  }
}
