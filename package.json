{
  "workspaces": [
    "./packages/*"
  ],
  "private": false,
  "scripts": {
    "build": "rollup --config rollup.config.mjs",
    "postbuild": "npm run build:types:mv:quark && npm run build:types:mv:validate && npm run build:types:rm:quark && npm run build:types:rm:validate",
    "test": "vitest",
    "test:watch": "vitest -w",
    "test:coverage": "vitest run --coverage",
    "build:types:mv:quark": "mv dist/quark/types/src/schemas.d.ts dist/quark/types.d.ts",
    "build:types:rm:quark": "rm -rf dist/quark/types",
    "build:types:mv:validate": "mv dist/quark.validate/types/src/schemas.d.ts dist/quark.validate/types.d.ts",
    "build:types:rm:validate": "rm -rf dist/quark.validate/types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DepartureLabsIC/quark.js.git"
  },
  "author": "Departure Labs",
  "bugs": {
    "url": "https://github.com/DepartureLabsIC/quark.js/issues"
  },
  "homepage": "https://github.com/DepartureLabsIC/quark.js#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "10.0.1",
    "jsdom": "19.0.0",
    "prettier": "2.8.0",
    "rollup": "3.7.3",
    "typescript": "4.9.4",
    "vite-plugin-eslint": "1.8.1",
    "vitest": "0.7.7"
  }
}
