{
  "workspaces": [
    "packages/quark",
    "packages/quark.validate"
  ],
  "private": false,
  "scripts": {
    "build": "rollup --config rollup.config.mjs",
    "postbuild": "npm run build:types:quark:cp && npm run build:types:validate:cp",
    "test": "vitest",
    "test:watch": "vitest -w",
    "test:coverage": "vitest run --coverage",
    "build:types:quark:cp": "cp packages/quark/dist/types/src/schemas.d.ts packages/quark/dist/types.d.ts",
    "build:types:validate:cp": "cp packages/quark.validate/dist/types/src/schemas.d.ts packages/quark.validate/dist/types.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DepartureLabsIC/quark.js.git"
  },
  "author": "Departure Labs",
  "bugs": {
    "url": "https://github.com/DepartureLabsIC/quark.js/issues"
  },
  "homepage": "https://github.com/DepartureLabsIC/quark.js#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.4",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@rollup/plugin-typescript": "10.0.1",
    "jsdom": "19.0.0",
    "prettier": "2.8.0",
    "rollup": "3.7.3",
    "typescript": "4.9.4",
    "vite-plugin-eslint": "1.8.1",
    "vitest": "0.7.7",
    "zod": "3.20.1"
  }
}
